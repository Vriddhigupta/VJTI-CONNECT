<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/linear_layout_login"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/box_blue_bottom_curve">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="Hello Again!"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:textColor="@color/light_grey"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Welcome back you've been missed"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:tint="@color/peach"
            android:src="@drawable/icon_dash"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/box_white_outline"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/actor"
        android:elevation="5dp"
        android:inputType="phone"
        android:hint="Enter Registration ID"
        android:paddingLeft="30dp"
        android:textColorHint="@color/blue_grey"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/box_white_outline"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/actor"
        android:elevation="5dp"
        android:inputType="textPassword"
        android:textColorHint="@color/blue_grey"
        android:textColor="@color/dark_blue"
        android:hint="Password"
        android:paddingLeft="30dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/actor"
        android:text="Forget Password?"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_to_home_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/actor"
        android:text="Sign In"
        android:textAllCaps="false"
        android:background="@drawable/box_peach_solid"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        android:translationZ="20dp"
        android:stateListAnimator="@null"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/actor"
            android:text="Not a member? "/>

        <TextView
            android:id="@+id/text_btn_open_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/peach"
            android:textStyle="bold"
            android:fontFamily="@font/actor"
            android:text="Register now"/>

    </LinearLayout>





</LinearLayout>