<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".prati">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_home"
        app:elevation="0dp"
        android:background="@color/white"
        android:layout_height="65dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:title=" "
            app:titleTextColor="@color/white">
            <!--            android:background="@drawable/box_white_outline" >-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/icon_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="110dp"
                    android:gravity="center"
                    android:text="Technovanza "
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/hrline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        android:layout_below="@id/toolbar_home"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImageSlider"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/hrline"
        android:padding="10dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerImageSlider"
        android:lineSpacingExtra="4dp"
        android:padding="20dp"
        android:text="@string/prati"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/toknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/textView"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="16dp"
            android:src="@drawable/line_strokes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To know more, visit us on "
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="77dp"
            android:layout_height="16dp"
            android:src="@drawable/line_strokes"
            android:rotation="180"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:layout_below="@id/toknow"
        android:gravity="center">

        <TextView
            android:id="@+id/insta1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_instagram"
            android:elevation="10dp"
            android:clickable="true"
            android:autoLink="all"
            android:padding="4dp"/>


        <TextView
            android:id="@+id/youtube1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/icon_youtube"
            android:elevation="10dp"
            android:clickable="true"
            android:autoLink="all"
            android:layout_marginLeft="32dp"/>

        <TextView
            android:id="@+id/fb1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_facebook_logo"
            android:elevation="10dp"
            android:clickable="true"
            android:autoLink="all"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/web1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_web"
            android:elevation="10dp"
            android:clickable="true"
            android:autoLink="all"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

